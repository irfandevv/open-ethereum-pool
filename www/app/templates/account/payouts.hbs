<div class="container">
  {{#if model.payments}}
  <h4>Your Latest Payouts</h4>
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Time</th>
        <th>Tx ID</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.payments as |tx|}}
        <tr>
          <td>{{format-date-locale tx.timestamp}}</td>
          <td style="font-family: 'Inconsolata', monospace"><a href="https://etherchain.org/tx/{{tx.tx}}">{{tx.tx}}</a></td>
          <td>{{format-balance tx.amount}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <h3>No payouts yet</h3>
  {{/if}}
</div>
